<%- include('partials/header', { bodyClass: 'about-us-page about-us-page-template' }) %>

<style>
    /* Promise card numbers color (kept from original page inline styles) */
    .about-us-page-template .promise-card--number span { color: var(--brand-red) !important; }
    .about-us-page-template .promise-card--number span::selection { background: rgba(255,0,0,0.15); }
    @media (prefers-contrast: more) {
      .about-us-page-template .promise-card--number span { text-shadow: 0 0 0 transparent; }
    }

    /* Centered, full-width form styling (parity with Contact page) */
    .about-us-page-template .wpforms-container { max-width: 720px; margin: 0 auto; }
    .about-us-page-template .wpforms-container .wpforms-field { margin-bottom: 16px; }
    .about-us-page-template .wpforms-container .wpforms-field-row { display: block; }
    .about-us-page-template .wpforms-container .wpforms-field-row-block { width: 100%; }
    .about-us-page-template .wpforms-container .wpforms-submit-container { text-align: center; margin-top: 10px; }

    .about-us-page-template .wpforms-container .wpforms-field-label,
    .about-us-page-template .wpforms-container legend.wpforms-field-label { color: var(--brand-dark); font-weight: 600; }
    .about-us-page-template .wpforms-container .wpforms-required-label { color: var(--brand-red); margin-left: 2px; }

    .about-us-page-template .wpforms-container input[type="text"],
    .about-us-page-template .wpforms-container input[type="email"],
    .about-us-page-template .wpforms-container input[type="tel"],
    .about-us-page-template .wpforms-container textarea,
    .about-us-page-template .wpforms-container select {
      width: 100%;
      padding: 10px 12px;
      background: #fff;
      border: 1px solid #ced4da;
      border-radius: 8px;
      outline: none;
      transition: box-shadow .15s ease, border-color .15s ease;
    }
    .about-us-page-template .wpforms-container input:focus,
    .about-us-page-template .wpforms-container textarea:focus,
    .about-us-page-template .wpforms-container select:focus {
      border-color: var(--brand-red);
      box-shadow: 0 0 0 .2rem rgba(255, 87, 34, 0.25);
    }
    .about-us-page-template .wpforms-container input::placeholder,
    .about-us-page-template .wpforms-container textarea::placeholder { color: #9aa3ad; opacity: 1; }

    .about-us-page-template .wpforms-submit,
    .about-us-page-template button[type="submit"],
    .about-us-page-template .wpforms-page-button {
      background-color: var(--brand-red) !important;
      border-color: var(--brand-red) !important;
      color: #fff !important;
      border-radius: 8px;
      padding: 0.6rem 1.25rem;
    }
    .about-us-page-template .wpforms-submit:hover,
    .about-us-page-template button[type="submit"]:hover,
    .about-us-page-template .wpforms-page-button:hover {
      background-color: #d7341b !important;
      border-color: #d7341b !important;
    }

    /* Error states */
    .about-us-page-template .wpforms-container .wpforms-error,
    .about-us-page-template .wpforms-container .wpforms-field.wpforms-has-error .wpforms-field-label { color: #d63637; }
    .about-us-page-template .wpforms-container input[aria-invalid="true"],
    .about-us-page-template .wpforms-container textarea[aria-invalid="true"],
    .about-us-page-template .wpforms-container select[aria-invalid="true"] {
      border-color: #d63637;
      box-shadow: 0 0 0 .2rem rgba(214, 54, 55, 0.15);
    }

    @media (max-width: 600px) {
      .about-us-page-template .wpforms-container { max-width: 100%; padding: 0 12px; }
      .about-us-page-template .wpforms-container .wpforms-submit-container { text-align: center; }
    }

    /* Core Values: force brand blue text within the section */
    .core-values, 
    .core-values .section-title,
    .core-values h2,
    .core-values h3,
    .core-values p,
    .core-values li { color: var(--brand-blue) !important; }
    /* Increase specificity to beat theme styles */
    .core-values .core-values--values,
    .core-values .core-values--value,
    .core-values .core-values--content,
    .core-values .core-values--content *,
    .core-values .left,
    .core-values .left *,
    .core-values .right,
    .core-values .right *,
    .core-values a { color: var(--brand-blue) !important; }
    /* Final override: ensure Core Values section text stays blue */
    .core-values, .core-values * { color: var(--brand-blue) !important; }
    .core-values a:hover, .core-values a:focus { color: var(--brand-blue) !important; text-decoration: underline; }
    /* Extra-specific paragraph overrides in Core Values */
    .core-values p,
    .core-values .core-values--values p,
    .core-values .core-values--value p,
    .core-values .core-values--content p,
    .core-values .left p,
    .core-values .right p,
    /* Ultra-specific combos to beat any theme selectors */
    .core-values.bg-garageup-primary-dark .left .core-values--values .core-values--value .core-values--content p,
    .core-values.bg-garageup-primary-dark .left .core-values--content p,
    .about-us-page .core-values .left .core-values--content p { color: var(--brand-blue) !important; }
    
    /* Make single images large and clean in each section */
    .about-us-page-template .image-col figure { margin: 0; }
    .about-us-page-template .image-col img { width: 100%; height: auto; display: block; border-radius: 12px; }
    .about-us-page-template .core-values .right img { 
      width: 100%; 
      height: clamp(360px, 60vh, 760px); /* make image noticeably taller, responsive */
      object-fit: cover; /* crop nicely to fill height */
      display: block; 
      border-radius: 12px; 
    }

    /* Core Values icons: inline SVGs use currentColor; force brand blue */
    .about-us-page-template .core-values .core-values--icon svg {
      width: 52px; height: 52px; display: block; color: var(--brand-blue); fill: currentColor;
    }

    /* Promise section: force all typography to white on red background */
    .about-us-page-template .promise-wrapper,
    .about-us-page-template .promise-wrapper * { color: #fff !important; }
    /* Ensure the numeric badges are also white here (overrides earlier brand-red rule) */
    .about-us-page-template .promise-wrapper .promise-card--number span { color: #fff !important; }
  </style>

    
      <% 
        // Compute a safe hero background URL
        const _rawHero = (about && about.heroBg) || '';
        const _trimHero = (typeof _rawHero === 'string') ? _rawHero.trim() : '';
        const _isAbs = /^https?:\/\//i.test(_trimHero);
        const _safeHero = _trimHero
          ? (_isAbs ? _trimHero : ('/' + _trimHero.replace(/^\/+/, '')))
          : '/pictures/Washology/2.png';
      %>
      <!-- Hero -->
      <section class="hero hero-wrapper gradient-overlay"
        style="background-image: url('<%= _safeHero %>');">
        <h1><%= (about && about.heroTitle) || 'About Washology' %></h1>
      </section>

      

      <!-- Intro / Our Story -->
      <section class="intro-wrapper bg-icon">
        <div class="container">
          <div class="row">
            <div class="col-sm-12 col-lg-5" style="color: var(--brand-red) !important;">
              <h2 class="section-title"><%= (about && about.introTitle) || 'Our Story' %></h2>
              <% 
                const introBody = (about && about.introBody) || '';
                const introHasHtml = /<\w+[^>]*>/.test(introBody || '');
                if (introHasHtml) { %>
                  <%- introBody %>
              <% } else { 
                   const paragraphs = (introBody || '').split(/\n\s*\n/).filter(Boolean);
                   if (paragraphs.length) {
                     paragraphs.forEach(function(p, idx){ %>
                       <% if (idx === paragraphs.length - 1) { %>
                         <p><strong><%- p %></strong></p>
                       <% } else { %>
                         <p><%- p %></p>
                       <% } %>
                   <% });
                   } else { %>
                     <p>At Washology, our mission is to restore curb appeal with professional pressure washing and soft washing. From house washing and roof soft wash to driveway, patio, and storefront cleaning, we use the right method for every surface.</p>
                     <p>We’re a friendly, trained team that takes pride in the details—so you can relax. Expect on‑time arrivals, photo updates, and consistent, long‑lasting results without damage.</p>
                     <p><strong>We’re growing across the region and remain focused on transparent communication, trusted results, and five‑star service—every visit.</strong></p>
                   <% }
                 } %>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-sm-12 col-lg-6 image-col">
              <figure>
                <img width="1280" height="853" class="img-fluid" alt="Washology technician pressure washing"
                  src="<%= (about && about.introImage1) || '/pictures/Washology/3.png' %>" />
              </figure>
            </div>
          </div>
        </div>
      </section>

      <!-- Core Values -->
